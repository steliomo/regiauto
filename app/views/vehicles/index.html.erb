<%- title "Vehicles" -%>
<h1>Listing Vehicles</h1>

<div class='nav'><%= link_to "New vehicle", new_vehicle_path %></div>

<div class='search_field'>
  <%= form_tag vehicles_path, :method => 'get', :id => "search" do %>
	 <%= text_field_tag :search, params[:search], :placeholder => "Search", :autocomplete => :off,  :id => "field_search"%>
	 <%= submit_tag 'Search', :search => nil %>
  <% end %>
</div>

<div id='vehicles'><%= render 'vehicles' %></div>

<div class='paginate'><%= will_paginate @vehicles %></div>